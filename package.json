    "掌上生活"
  ],
  "author": "Yourtion <yourtion@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourtion/node-cmb-open/issues"
  },
  "homepage": "https://github.com/yourtion/node-cmb-open#readme",
  "devDependencies": {
    "@types/node": "^9.4.7",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
